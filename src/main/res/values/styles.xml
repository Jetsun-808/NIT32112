<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DetailTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#555555</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="ToolbarTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">32sp</item> <!-- Set text size -->
        <item name="android:textColor">#ffffff</item> <!-- Set text color (optional) -->
        <item name="android:textStyle">bold</item> <!-- Optional: set bold text style -->
    </style>
    <style name="WhiteHintText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>